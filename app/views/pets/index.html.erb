<h1>Listing pets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Kind</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.name %></td>
    <td><%= pet.kind %></td>
    <td><%= pet.person_id %></td>
    <td><%= link_to 'Show', person_pet_path(@person_id, pet) %></td>
    <td><%= link_to 'Edit', edit_person_pet_path(@person_id, pet) %></td>
    <td><%= link_to 'Destroy', person_pet_path(@person_id, pet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

